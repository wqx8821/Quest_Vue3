{
  "compilerOptions": {
    "outDir": "dist", // 输出目录
    "sourceMap": true, // 使用sourcemap
    "target": "es2016", // 目标语法
    "module": "esnext",  // 模块格式    
    "esModuleInterop": true, // 允许通过es6语法引入commonjs模块
    "moduleResolution": "node", // 模块解析方式     
    "resolveJsonModule": false, // 解析json模块 
    "strict": true,  // 严格模式    
    "jsx": "preserve", // jsx不转义
    "lib": ["ESNext", "DOM"], // 支持的类库           
    "skipLibCheck": true,
    "baseUrl": ".", //以当前路径为基准进行查找
        "paths": {
            "@vue/*": [//以@vue/开头的依赖都去packages下去查找
                "packages/*/src"
            ]
        }             
  }
}
